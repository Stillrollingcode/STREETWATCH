      <!-- All Photos Sub-section -->
      <div class="content-sub-section active" id="all-photos-section">
      <!-- Search Box -->
      <div class="search-box">
        <span class="search-icon">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="7" cy="7" r="4.5" stroke="currentColor" stroke-width="1.5"/>
            <path d="M10.5 10.5L13.5 13.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </span>
          <input type="text" id="photos-search" data-profile-filters-target="photosSearch" data-action="input->profile-filters#debouncedSearch keydown->profile-filters#submitSearch" placeholder="Search photos..." value="<%= @query %>">
      </div>
      <% if @photos&.any? %>
        <div data-controller="lazy-load"
             data-lazy-load-url-value="<%= user_path(@user, format: :html) %>"
             data-lazy-load-has-more-value="<%= @photos_has_more %>"
             data-lazy-load-page-value="<%= (@photos&.current_page || 0) + 1 %>">

          <div class="film-grid" data-lazy-load-target="container">
            <% @photos.each do |photo| %>
              <%= link_to photo_path(photo), class: "film-card" do %>
                <div class="photo-thumbnail">
                  <% if photo.image.attached? %>
                    <%= image_tag url_for(photo.image), alt: photo.title, loading: "lazy" %>
                  <% else %>
                    <div class="placeholder">ðŸ“·</div>
                  <% end %>
                </div>
                <div class="film-info">
                  <div class="film-title"><%= photo.title %></div>
                  <div class="role-badges">
                    <% roles = @user.photo_roles(photo) %>
                    <% roles.each do |role| %>
                      <span class="role-badge <%= role.downcase %>"><%= role %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- Loader for infinite scroll -->
          <div class="loader hidden" data-lazy-load-target="loader" style="text-align: center; padding: 2rem;">
            <div style="display: inline-block; width: 3rem; height: 3rem; border: 4px solid var(--border); border-top-color: var(--accent); border-radius: 50%; animation: spin 0.8s linear infinite;"></div>
          </div>

          <!-- Alternative: Load More button -->
          <% if @photos_has_more %>
            <div data-lazy-load-target="loadMore" style="text-align: center; padding: 2rem;">
              <button class="btn-primary" data-action="click->lazy-load#loadMoreClick" style="padding: 12px 32px; font-size: 15px; cursor: pointer; border-radius: 8px; border: 1px solid var(--border); background: var(--accent); color: white;">
                Load More Photos
              </button>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">No photos <%= "matching '#{@query}'" if @query.present? %>.</div>
      <% end %>
      </div>

      <!-- Albums Sub-section -->
      <div class="content-sub-section" id="albums-section" data-lazy-url="<%= photo_subtab_content_user_path(@user, subtab: 'albums') %>">
        <div class="lazy-loader" style="text-align: center; padding: 2rem;">
          <div style="display: inline-block; width: 3rem; height: 3rem; border: 4px solid var(--border); border-top-color: var(--accent); border-radius: 50%; animation: spin 0.8s linear infinite;"></div>
        </div>
      </div>

      <!-- Pending Photos Sub-section (only for profile owner) -->
      <% if @is_own_profile %>
        <div class="content-sub-section" id="pending-photos-section" data-lazy-url="<%= photo_subtab_content_user_path(@user, subtab: 'pending-photos') %>">
          <div class="lazy-loader" style="text-align: center; padding: 2rem;">
            <div style="display: inline-block; width: 3rem; height: 3rem; border: 4px solid var(--border); border-top-color: var(--accent); border-radius: 50%; animation: spin 0.8s linear infinite;"></div>
          </div>
        </div>

        <!-- Hidden Photos Sub-section (only for profile owner) -->
        <div class="content-sub-section" id="hidden-photos-section" data-lazy-url="<%= photo_subtab_content_user_path(@user, subtab: 'hidden-photos') %>">
          <div class="lazy-loader" style="text-align: center; padding: 2rem;">
            <div style="display: inline-block; width: 3rem; height: 3rem; border: 4px solid var(--border); border-top-color: var(--accent); border-radius: 50%; animation: spin 0.8s linear infinite;"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Articles Content Section -->
    <div class="content-section <%= 'active' if ordered_tabs.first == 'articles' %>" id="articles-section">
      <div class="empty-state">
        <h3 style="margin: 0 0 10px; color: var(--text);">Articles Coming Soon</h3>
        <p>Article publishing will be available in a future update.</p>
      </div>
    </div>
  </div>
</div>

<% if @is_own_profile %>
  <%= render "users/settings_drawer", resource: current_user %>
<% end %>
