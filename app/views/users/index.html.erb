<% theme = user_theme_styles %>
<style>
  .profiles-hero {
    padding: 32px 0 12px;
    display: grid;
    gap: 8px;
  }
  .profiles-hero h1 {
    margin: 0;
    font-size: clamp(26px, 5vw, 36px);
    letter-spacing: 0.01em;
  }
  .profiles-hero p {
    margin: 0;
    color: var(--muted);
  }
  .profiles-layout {
    display: grid;
    grid-template-columns: 240px minmax(0, 1fr);
    gap: 24px;
    align-items: start;
    padding-right: 24px;
    margin-top: 12px;
  }
  .profiles-filters {
    position: sticky;
    top: 96px;
    align-self: start;
  }
  .profiles-main {
    min-width: 0;
    padding-right: 0;
  }
  .profiles-filters-inner {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 16px;
    background: rgba(255,255,255,0.03);
    display: grid;
    gap: 16px;
  }
  .profiles-filters-form {
    display: grid;
    gap: 14px;
  }
  .profiles-filters h3 {
    margin: 0;
    font-size: 13px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }
  .filter-group {
    display: grid;
    gap: 6px;
  }
  .filter-label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--muted);
  }
  .filter-select {
    width: 100%;
    background: rgba(255,255,255,0.04);
    border: 1px solid var(--border);
    border-radius: 10px;
    color: var(--text);
    padding: 9px 12px;
    font-size: 13px;
    font-weight: 600;
    appearance: none;
  }
  .filter-actions {
    display: grid;
    gap: 8px;
    margin-top: 10px;
  }
  .filter-apply {
    width: 100%;
    padding: 10px 12px;
    border-radius: 10px;
    border: none;
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? '#0b0b0d' : 'white' %>;
    font-size: 13px;
    font-weight: 700;
    cursor: pointer;
  }
  .filter-reset {
    text-align: center;
    font-size: 12px;
    color: var(--muted);
    text-decoration: none;
  }
  .filter-note {
    font-size: 12px;
    color: var(--muted);
    line-height: 1.4;
  }
  .profiles-toolbar {
    display: grid;
    gap: 12px;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    margin: 0 0 20px;
  }
  .profiles-search {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
  }
  .profiles-search input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--text);
    font-size: 15px;
    outline: none;
  }
  .profiles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-bottom: 32px;
    padding-right: 24px;
  }

  @media (max-width: 900px) {
    .profiles-layout {
      grid-template-columns: 1fr;
      padding-right: 0;
    }
    .profiles-filters {
      position: static;
      order: -1;
    }
    .profiles-main {
      padding-right: 0;
    }
    .profiles-grid {
      grid-template-columns: 1fr;
      padding-right: 0;
    }
  }

  @media (max-width: 600px) {
    .profiles-grid {
      grid-template-columns: 1fr;
    }
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin: 32px 0;
  }

  .pagination a,
  .pagination .current,
  .pagination .gap {
    padding: 8px 12px;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
    color: var(--text);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.15s ease;
  }

  .pagination a:hover {
    background: rgba(255,255,255,0.08);
    border-color: var(--accent);
  }

  .pagination .current {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? 'white' : '#0b0b0d' %>;
    border-color: transparent;
    font-weight: 600;
  }

  .pagination .gap {
    border: none;
    background: transparent;
    color: var(--muted);
  }

  .pagination .first,
  .pagination .prev,
  .pagination .next,
  .pagination .last {
    font-weight: 600;
  }
  .profile-card {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 16px;
    background: rgba(255,255,255,0.02);
    display: grid;
    gap: 10px;
    transition: all 0.15s ease;
    text-decoration: none;
    color: inherit;
  }
  .profile-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.15);
    box-shadow: 0 10px 30px rgba(0,0,0,0.35);
  }
  .profile-card-top {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }
  .profile-card-link {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    flex: 1;
    min-width: 0;
    text-decoration: none;
    color: inherit;
  }
  .profile-card-actions {
    flex-shrink: 0;
    margin-left: auto;
    margin-top: 2px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 6px;
  }

  @media (max-width: 768px) {
    .profile-card-actions {
      width: 100%;
    }
    .profile-card-top {
      align-items: flex-start;
      flex-direction: column;
    }
  }
  .profile-avatar {
    width: 60px;
    height: 60px;
    min-width: 60px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: <%= theme[:primary_rgba].sub('ALPHA', '0.3') %>; /* Fallback for Chrome <111 */
    background: color-mix(in srgb, var(--accent) 30%, transparent);
    color: #050505;
    font-weight: 800;
    letter-spacing: 0.04em;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .profile-info {
    flex: 1;
    min-width: 0;
  }
  .profile-name {
    font-weight: 700;
    font-size: 14px;
    margin-bottom: 2px;
    color: var(--text);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .profile-username {
    color: var(--muted);
    font-size: 13px;
    margin-bottom: 8px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .profile-bio {
    color: var(--muted);
    font-size: 13px;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-left: 72px;
  }
  .support-btn {
    padding: 8px 16px;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
    color: var(--text);
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.15s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }
  .support-btn:hover {
    background: rgba(255,255,255,0.08);
    border-color: var(--accent);
  }
  .support-btn.active {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? '#0b0b0d' : 'white' %>;
    border-color: transparent;
  }
  .profile-type-label {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    background: rgba(255,255,255,0.08);
    color: var(--accent);
    border: 1px solid rgba(255,255,255,0.1);
    margin-top: 4px;
  }
  .profile-card-actions .profile-type-label {
    margin-top: 0;
  }
  @media (max-width: 768px) {
    .profile-bio {
      margin-left: 0;
    }
  }
</style>
<%= render 'shared/autocomplete_styles' %>

<div class="profiles-hero">
  <% if @user.present? %>
    <h1><%= @user.username.presence || @user.email %>'s Following</h1>
    <p><%= @user.username.presence || @user.email %> supports these profiles.</p>
  <% else %>
    <h1>Rider Profiles</h1>
    <p>Discover riders, editors, photographers, filmers, crews, and companies across the archive.</p>
  <% end %>
</div>

<div class="profiles-layout" data-controller="users-index" data-action="submit->users-index#handleFollowSubmit">
  <aside class="profiles-filters">
    <div class="profiles-filters-inner">
      <h3>Sort & Filter</h3>
      <form class="profiles-filters-form" method="get" action="<%= request.path %>">
        <input type="hidden" name="q" value="<%= @query %>">

        <div class="filter-group">
          <label class="filter-label" for="profiles-sort">Sort</label>
          <select class="filter-select" id="profiles-sort" name="sort">
            <option value="alpha_asc" <%= params[:sort].blank? || params[:sort] == 'alpha_asc' ? 'selected' : '' %>>A-Z</option>
            <option value="alpha_desc" <%= params[:sort] == 'alpha_desc' ? 'selected' : '' %>>Z-A</option>
            <option value="followers_desc" <%= params[:sort] == 'followers_desc' ? 'selected' : '' %>>Most Followed</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label" for="profiles-type">Profile Type</label>
          <select class="filter-select" id="profiles-type" name="profile_type">
            <option value="" <%= params[:profile_type].blank? ? 'selected' : '' %>>All Types</option>
            <option value="individual" <%= params[:profile_type] == 'individual' ? 'selected' : '' %>>Individual</option>
            <option value="crew" <%= params[:profile_type] == 'crew' ? 'selected' : '' %>>Crew</option>
            <option value="company" <%= params[:profile_type] == 'company' ? 'selected' : '' %>>Company</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label" for="profiles-supporting">Supporting</label>
          <% if user_signed_in? %>
            <select class="filter-select" id="profiles-supporting" name="supporting">
              <option value="" <%= params[:supporting].blank? ? 'selected' : '' %>>All Profiles</option>
              <option value="supporting" <%= params[:supporting] == 'supporting' ? 'selected' : '' %>>Supporting</option>
              <option value="not_supporting" <%= params[:supporting] == 'not_supporting' ? 'selected' : '' %>>Not Supporting</option>
            </select>
          <% else %>
            <select class="filter-select" id="profiles-supporting" disabled>
              <option>Sign in to filter</option>
            </select>
            <div class="filter-note">Sign in to filter by who you support.</div>
          <% end %>
        </div>

        <div class="filter-actions">
          <button type="submit" class="filter-apply">Apply Filters</button>
          <a class="filter-reset" href="<%= request.path %>">Reset</a>
        </div>
      </form>
    </div>
  </aside>

  <div class="profiles-main">
    <div class="profiles-toolbar">
      <div class="profiles-search autocomplete-wrapper">
        <span style="opacity: 0.7;">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="7" cy="7" r="4.5" stroke="currentColor" stroke-width="1.5"/>
            <path d="M10.5 10.5L13.5 13.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </span>
        <input type="text" id="profiles-search-input" data-users-index-target="searchInput" data-action="input->users-index#handleInput keydown->users-index#handleKeydown" placeholder="Search riders by name, username, or email" value="<%= @query %>">
        <div class="autocomplete-results" id="profiles-search-results" data-users-index-target="results" data-action="click->users-index#selectAutocomplete"></div>
      </div>
    </div>

    <div data-controller="lazy-load"
         data-lazy-load-url-value="<%= users_path(format: :html) %>"
         data-lazy-load-has-more-value="<%= @has_more %>"
         data-lazy-load-page-value="<%= @users.current_page + 1 %>">
      <div class="profiles-grid" data-lazy-load-target="container">
        <%= render partial: 'profile_cards', locals: { users: @users, following_ids: @following_ids } %>

        <% if @users.none? %>
          <div style="grid-column: 1 / -1; text-align: center; color: var(--muted); padding: 20px;">
            No profiles match that search.
          </div>
        <% end %>
      </div>

      <div data-lazy-load-target="loader" style="display: none; text-align: center; padding: 20px;">
        <div style="display: inline-block; width: 40px; height: 40px; border: 3px solid rgba(255,255,255,0.1); border-top-color: var(--accent); border-radius: 50%; animation: spin 1s linear infinite;"></div>
      </div>

      <% if @has_more %>
        <div style="text-align: center; margin: 32px 0;">
          <button data-action="click->lazy-load#loadMore"
                  data-lazy-load-target="loadButton"
                  style="padding: 12px 32px; border-radius: 10px; border: 1px solid var(--border); background: rgba(255,255,255,0.04); color: var(--text); font-size: 14px; font-weight: 600; cursor: pointer; transition: all 0.15s ease;">
            Load More Profiles
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
