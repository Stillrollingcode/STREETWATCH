<% theme = user_theme_styles %>
<style>
  .profiles-hero {
    padding: 32px 0 12px;
    display: grid;
    gap: 8px;
  }
  .profiles-hero h1 {
    margin: 0;
    font-size: clamp(26px, 5vw, 36px);
    letter-spacing: 0.01em;
  }
  .profiles-hero p {
    margin: 0;
    color: var(--muted);
  }
  .profiles-toolbar {
    display: grid;
    gap: 12px;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    margin: 12px 0 20px;
  }
  .profiles-search {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
  }
  .profiles-search input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--text);
    font-size: 15px;
    outline: none;
  }
  .profiles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin-bottom: 32px;
  }

  @media (max-width: 900px) {
    .profiles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .profiles-grid {
      grid-template-columns: 1fr;
    }
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin: 32px 0;
  }

  .pagination a,
  .pagination .current,
  .pagination .gap {
    padding: 8px 12px;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
    color: var(--text);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.15s ease;
  }

  .pagination a:hover {
    background: rgba(255,255,255,0.08);
    border-color: var(--accent);
  }

  .pagination .current {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? 'white' : '#0b0b0d' %>;
    border-color: transparent;
    font-weight: 600;
  }

  .pagination .gap {
    border: none;
    background: transparent;
    color: var(--muted);
  }

  .pagination .first,
  .pagination .prev,
  .pagination .next,
  .pagination .last {
    font-weight: 600;
  }
  .profile-card {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 16px;
    background: rgba(255,255,255,0.02);
    display: flex;
    flex-direction: row;
    gap: 12px;
    align-items: center;
    transition: all 0.15s ease;
    text-decoration: none;
    color: inherit;
  }
  .profile-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.15);
    box-shadow: 0 10px 30px rgba(0,0,0,0.35);
  }
  .profile-card-content {
    flex: 1;
    min-width: 0;
  }
  .profile-card-header {
    display: flex;
    gap: 12px;
    align-items: flex-start;
  }
  .profile-card-actions {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .profile-card {
      flex-direction: column;
      align-items: stretch;
    }
    .profile-card-actions {
      width: 100%;
    }
  }
  .profile-avatar {
    width: 60px;
    height: 60px;
    min-width: 60px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: color-mix(in srgb, var(--accent) 30%, transparent);
    color: #050505;
    font-weight: 800;
    letter-spacing: 0.04em;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .profile-info {
    flex: 1;
    min-width: 0;
  }
  .profile-name {
    font-weight: 700;
    font-size: 15px;
    margin-bottom: 2px;
    color: var(--text);
  }
  .profile-username {
    color: var(--muted);
    font-size: 13px;
    margin-bottom: 8px;
  }
  .profile-bio {
    color: var(--muted);
    font-size: 13px;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .support-btn {
    padding: 8px 16px;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
    color: var(--text);
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.15s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }
  .support-btn:hover {
    background: rgba(255,255,255,0.08);
    border-color: var(--accent);
  }
  .support-btn.active {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? '#0b0b0d' : 'white' %>;
    border-color: transparent;
  }
  .profile-type-label {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    background: rgba(255,255,255,0.08);
    color: var(--accent);
    border: 1px solid rgba(255,255,255,0.1);
    margin-top: 4px;
  }
</style>

<div class="profiles-hero">
  <% if @user.present? %>
    <h1><%= @user.username.presence || @user.email %>'s Following</h1>
    <p><%= @user.username.presence || @user.email %> supports these profiles.</p>
  <% else %>
    <h1>Rider Profiles</h1>
    <p>Discover riders, editors, photographers, filmers, crews, and companies across the archive.</p>
  <% end %>
</div>

<div class="profiles-toolbar">
  <div class="profiles-search">
    <span style="opacity: 0.7;">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="7" cy="7" r="4.5" stroke="currentColor" stroke-width="1.5"/>
        <path d="M10.5 10.5L13.5 13.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
    </span>
    <input type="text" id="profiles-search-input" placeholder="Search riders by username or email" value="<%= @query %>">
  </div>
</div>

<div data-controller="lazy-load"
     data-lazy-load-url-value="<%= users_path(format: :html) %>"
     data-lazy-load-has-more-value="<%= @has_more %>"
     data-lazy-load-page-value="<%= @users.current_page + 1 %>">
  <div class="profiles-grid" data-lazy-load-target="container">
    <%= render partial: 'profile_cards', locals: { users: @users } %>

    <% if @users.none? %>
      <div style="grid-column: 1 / -1; text-align: center; color: var(--muted); padding: 20px;">
        No profiles match that search.
      </div>
    <% end %>
  </div>

  <div data-lazy-load-target="loader" style="display: none; text-align: center; padding: 20px;">
    <div style="display: inline-block; width: 40px; height: 40px; border: 3px solid rgba(255,255,255,0.1); border-top-color: var(--accent); border-radius: 50%; animation: spin 1s linear infinite;"></div>
  </div>

  <% if @has_more %>
    <div style="text-align: center; margin: 32px 0;">
      <button data-action="click->lazy-load#loadMore"
              data-lazy-load-target="loadButton"
              style="padding: 12px 32px; border-radius: 10px; border: 1px solid var(--border); background: rgba(255,255,255,0.04); color: var(--text); font-size: 14px; font-weight: 600; cursor: pointer; transition: all 0.15s ease;">
        Load More Profiles
      </button>
    </div>
  <% end %>
</div>

<script>
  let usersIndexSearchTimeout;

  function initializeUsersSearch() {
    const input = document.getElementById('profiles-search-input');
    if (!input) {
      console.log('[Users Index Search] Input not found');
      return;
    }

    console.log('[Users Index Search] Initializing search');

    // Remove existing event listeners by cloning
    const newInput = input.cloneNode(true);
    input.parentNode.replaceChild(newInput, input);

    // Refocus after page reload if we just searched
    if (sessionStorage.getItem('profilesSearchFocus') === 'true') {
      sessionStorage.removeItem('profilesSearchFocus');
      setTimeout(() => {
        newInput.focus();
        const len = newInput.value.length;
        newInput.setSelectionRange(len, len);
        console.log('[Users Index Search] Auto-focused input');
      }, 60);
    }

    function navigateWithQuery() {
      const params = new URLSearchParams(window.location.search);
      const value = newInput.value.trim();
      if (value) {
        params.set('q', value);
      } else {
        params.delete('q');
      }
      // Reset to page 1 when searching
      params.delete('page');
      sessionStorage.setItem('profilesSearchFocus', 'true');
      const newUrl = window.location.pathname + (params.toString() ? `?${params.toString()}` : '');
      console.log('[Users Index Search] Navigating to:', newUrl);
      window.location = newUrl;
    }

    newInput.addEventListener('input', function() {
      console.log('[Users Index Search] Input changed:', this.value);
      clearTimeout(usersIndexSearchTimeout);
      usersIndexSearchTimeout = setTimeout(navigateWithQuery, 2000);
    });

    newInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        console.log('[Users Index Search] Enter key pressed');
        clearTimeout(usersIndexSearchTimeout);
        navigateWithQuery();
      }
    });

    console.log('[Users Index Search] Initialization complete');
  }

  // Initialize on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', function() {
    console.log('[Users Index Search] DOMContentLoaded fired');
    initializeUsersSearch();
  });

  // Also initialize on Turbo navigation
  document.addEventListener('turbo:load', function() {
    console.log('[Users Index Search] turbo:load fired');
    initializeUsersSearch();
  });

  // Fallback initialization
  setTimeout(function() {
    console.log('[Users Index Search] Fallback initialization');
    initializeUsersSearch();
  }, 500);
</script>
