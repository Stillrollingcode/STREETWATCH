<%= render 'shared/autocomplete_styles' %>

<div class="profiles-hero">
  <% if @user.present? %>
    <h1><%= @user.username.presence || @user.email %>'s Following</h1>
    <p><%= @user.username.presence || @user.email %> supports these profiles.</p>
  <% else %>
    <h1>Rider Profiles</h1>
    <p>Discover riders, editors, photographers, filmers, crews, and companies across the archive.</p>
  <% end %>
</div>

<div class="profiles-layout">
  <aside class="profiles-filters">
    <div class="profiles-filters-inner">
      <h3>Sort & Filter</h3>
      <form class="profiles-filters-form" method="get" action="<%= request.path %>">
        <input type="hidden" name="q" value="<%= @query %>">

        <div class="filter-group">
          <label class="filter-label" for="profiles-sort">Sort</label>
          <select class="filter-select" id="profiles-sort" name="sort">
            <option value="alpha_asc" <%= params[:sort].blank? || params[:sort] == 'alpha_asc' ? 'selected' : '' %>>A-Z</option>
            <option value="alpha_desc" <%= params[:sort] == 'alpha_desc' ? 'selected' : '' %>>Z-A</option>
            <option value="followers_desc" <%= params[:sort] == 'followers_desc' ? 'selected' : '' %>>Most Followed</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label" for="profiles-type">Profile Type</label>
          <select class="filter-select" id="profiles-type" name="profile_type">
            <option value="" <%= params[:profile_type].blank? ? 'selected' : '' %>>All Types</option>
            <option value="individual" <%= params[:profile_type] == 'individual' ? 'selected' : '' %>>Individual</option>
            <option value="crew" <%= params[:profile_type] == 'crew' ? 'selected' : '' %>>Crew</option>
            <option value="company" <%= params[:profile_type] == 'company' ? 'selected' : '' %>>Company</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label" for="profiles-supporting">Supporting</label>
          <% if user_signed_in? %>
            <select class="filter-select" id="profiles-supporting" name="supporting">
              <option value="" <%= params[:supporting].blank? ? 'selected' : '' %>>All Profiles</option>
              <option value="supporting" <%= params[:supporting] == 'supporting' ? 'selected' : '' %>>Supporting</option>
              <option value="not_supporting" <%= params[:supporting] == 'not_supporting' ? 'selected' : '' %>>Not Supporting</option>
            </select>
          <% else %>
            <select class="filter-select" id="profiles-supporting" disabled>
              <option>Sign in to filter</option>
            </select>
            <div class="filter-note">Sign in to filter by who you support.</div>
          <% end %>
        </div>

        <div class="filter-actions">
          <button type="submit" class="filter-apply">Apply Filters</button>
          <a class="filter-reset" href="<%= request.path %>">Reset</a>
        </div>
      </form>
    </div>
  </aside>

  <div class="profiles-main">
    <div class="profiles-toolbar">
      <div class="profiles-search autocomplete-wrapper">
        <span style="opacity: 0.7;">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="7" cy="7" r="4.5" stroke="currentColor" stroke-width="1.5"/>
            <path d="M10.5 10.5L13.5 13.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </span>
        <input type="text" id="profiles-search-input" placeholder="Search riders by name, username, or email" value="<%= @query %>">
        <div class="autocomplete-results" id="profiles-search-results"></div>
      </div>
    </div>

    <div data-controller="lazy-load"
         data-lazy-load-url-value="<%= users_path(format: :html) %>"
         data-lazy-load-has-more-value="<%= @has_more %>"
         data-lazy-load-page-value="<%= @users.current_page + 1 %>">
      <div class="profiles-grid" data-lazy-load-target="container">
        <%= render partial: 'profile_cards', locals: { users: @users, following_ids: @following_ids } %>

        <% if @users.none? %>
          <div style="grid-column: 1 / -1; text-align: center; color: var(--muted); padding: 20px;">
            No profiles match that search.
          </div>
        <% end %>
      </div>

      <div data-lazy-load-target="loader" style="display: none; text-align: center; padding: 20px;">
        <div style="display: inline-block; width: 40px; height: 40px; border: 3px solid rgba(255,255,255,0.1); border-top-color: var(--accent); border-radius: 50%; animation: spin 1s linear infinite;"></div>
      </div>

      <% if @has_more %>
        <div style="text-align: center; margin: 32px 0;">
          <button data-action="click->lazy-load#loadMore"
                  data-lazy-load-target="loadButton"
                  style="padding: 12px 32px; border-radius: 10px; border: 1px solid var(--border); background: rgba(255,255,255,0.04); color: var(--text); font-size: 14px; font-weight: 600; cursor: pointer; transition: all 0.15s ease;">
            Load More Profiles
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let usersIndexSearchTimeout;
  let usersIndexAutocompleteTimeout;
  let profilesSearchInput = null;
  let profilesSearchResults = null;
  let profilesSearchCloseHandlerBound = false;
  let followToggleInitialized = false;
  const followSyncState = new WeakMap();

  function initializeUsersSearch() {
    const input = document.getElementById('profiles-search-input');
    const resultsDiv = document.getElementById('profiles-search-results');
    if (!input) {
      console.log('[Users Index Search] Input not found');
      return;
    }
    if (!resultsDiv) {
      console.log('[Users Index Search] Results container not found');
      return;
    }

    console.log('[Users Index Search] Initializing search');

    // Remove existing event listeners by cloning
    const newInput = input.cloneNode(true);
    input.parentNode.replaceChild(newInput, input);

    // Track the active input/results for shared handlers
    profilesSearchInput = newInput;
    profilesSearchResults = resultsDiv;

    // Refocus after page reload if we just searched
    if (sessionStorage.getItem('profilesSearchFocus') === 'true') {
      sessionStorage.removeItem('profilesSearchFocus');
      setTimeout(() => {
        newInput.focus();
        const len = newInput.value.length;
        newInput.setSelectionRange(len, len);
        console.log('[Users Index Search] Auto-focused input');
      }, 60);
    }

    function normalizeSearchValue(value) {
      return (value || '').toLowerCase().replace(/[^a-z0-9]/g, '');
    }

    function userMatchesQuery(user, query) {
      const queryLower = query.toLowerCase();
      const username = (user.username || '').toLowerCase();
      const name = (user.name || '').toLowerCase();

      if (username.includes(queryLower) || name.includes(queryLower)) {
        return true;
      }

      const compactQuery = normalizeSearchValue(queryLower);
      if (!compactQuery) {
        return false;
      }

      return normalizeSearchValue(username).includes(compactQuery) ||
        normalizeSearchValue(name).includes(compactQuery);
    }

    function navigateWithQuery(valueOverride) {
      const params = new URLSearchParams(window.location.search);
      const value = (valueOverride || newInput.value).trim();
      if (value) {
        params.set('q', value);
      } else {
        params.delete('q');
      }
      // Reset to page 1 when searching
      params.delete('page');
      sessionStorage.setItem('profilesSearchFocus', 'true');
      const newUrl = window.location.pathname + (params.toString() ? `?${params.toString()}` : '');
      console.log('[Users Index Search] Navigating to:', newUrl);
      window.location = newUrl;
    }

    function updateAutocomplete(query) {
      const trimmed = query.trim();
      if (trimmed.length < 2) {
        resultsDiv.classList.remove('show');
        resultsDiv.innerHTML = '';
        return;
      }

      clearTimeout(usersIndexAutocompleteTimeout);
      usersIndexAutocompleteTimeout = setTimeout(() => {
        fetch(`/users.json?q=${encodeURIComponent(trimmed)}`)
          .then(response => (response.ok ? response.json() : []))
          .then(users => {
            const filtered = users.filter(user => userMatchesQuery(user, trimmed));
            if (filtered.length === 0) {
              resultsDiv.innerHTML = '<div class="autocomplete-result-item">No matches</div>';
              resultsDiv.classList.add('show');
              return;
            }

            resultsDiv.innerHTML = filtered.slice(0, 8).map(user => `
              <div class="autocomplete-result-item" data-search-value="${user.name || user.username}">
                <span class="autocomplete-result-username">${user.username || user.name}</span>
                <span class="autocomplete-result-type">${user.name || ''}</span>
              </div>
            `).join('');
            resultsDiv.classList.add('show');
          })
          .catch(error => {
            console.error('[Users Index Search] Autocomplete error:', error);
          });
      }, 150);
    }

    newInput.addEventListener('input', function() {
      console.log('[Users Index Search] Input changed:', this.value);
      clearTimeout(usersIndexSearchTimeout);
      usersIndexSearchTimeout = setTimeout(navigateWithQuery, 2000);
      updateAutocomplete(this.value);
    });

    newInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        console.log('[Users Index Search] Enter key pressed');
        clearTimeout(usersIndexSearchTimeout);
        navigateWithQuery();
      }
    });

    if (!resultsDiv.dataset.initialized) {
      resultsDiv.dataset.initialized = 'true';
      resultsDiv.addEventListener('click', function(e) {
        const item = e.target.closest('.autocomplete-result-item');
        if (!item) return;
        const searchValue = item.dataset.searchValue || '';
        resultsDiv.classList.remove('show');
        navigateWithQuery(searchValue);
      });
    }

    if (!profilesSearchCloseHandlerBound) {
      profilesSearchCloseHandlerBound = true;
      document.addEventListener('click', function(e) {
        if (!profilesSearchInput || !profilesSearchResults) return;
        if (!profilesSearchInput.contains(e.target) && !profilesSearchResults.contains(e.target)) {
          profilesSearchResults.classList.remove('show');
        }
      });
    }

    console.log('[Users Index Search] Initialization complete');
  }

  function initializeFollowToggles() {
    if (followToggleInitialized) return;
    followToggleInitialized = true;

    document.addEventListener('submit', function(event) {
      const form = event.target;
      if (!form || !form.matches('form[data-follow-toggle="true"]')) return;

      event.preventDefault();
      const state = getFollowSyncState(form);
      const nextState = form.dataset.following !== 'true';

      state.desired = nextState;
      setFollowState(form, nextState);
      scheduleFollowSync(form, state);
    }, true);
  }

  function getFollowSyncState(form) {
    let state = followSyncState.get(form);
    if (!state) {
      const initial = form.dataset.following === 'true';
      state = {
        desired: initial,
        confirmed: initial,
        timer: null,
        inFlight: false,
        needsSync: false
      };
      followSyncState.set(form, state);
    }
    return state;
  }

  function scheduleFollowSync(form, state) {
    if (state.timer) clearTimeout(state.timer);
    state.timer = setTimeout(() => {
      state.timer = null;
      syncFollowState(form);
    }, 200);
  }

  function getCsrfToken() {
    return document.querySelector('meta[name="csrf-token"]')?.content || '';
  }

  function syncFollowState(form) {
    const state = getFollowSyncState(form);

    if (state.inFlight) {
      state.needsSync = true;
      return;
    }

    if (state.confirmed === state.desired) return;

    const targetState = state.desired;
    const followUrl = form.dataset.followUrl || form.getAttribute('action');
    const unfollowUrl = form.dataset.unfollowUrl || form.getAttribute('action');
    const requestUrl = targetState ? followUrl : unfollowUrl;
    const requestMethod = targetState ? 'POST' : 'DELETE';
    const csrfToken = getCsrfToken();
    const headers = { 'X-Requested-With': 'XMLHttpRequest' };
    if (csrfToken) {
      headers['X-CSRF-Token'] = csrfToken;
    }

    state.inFlight = true;
    state.needsSync = false;

    fetch(requestUrl, {
      method: requestMethod,
      credentials: 'same-origin',
      headers
    })
      .then(response => {
        if (!response.ok) throw new Error(`Follow toggle failed: ${response.status}`);
        state.confirmed = targetState;
      })
      .catch(error => {
        console.error('[Users Index] Follow toggle error:', error);
        if (state.desired === targetState) {
          state.desired = state.confirmed;
          setFollowState(form, state.confirmed);
        }
      })
      .finally(() => {
        state.inFlight = false;
        if (state.needsSync || state.confirmed !== state.desired) {
          syncFollowState(form);
        }
      });
  }

  function setFollowState(form, isFollowing) {
    const followUrl = form.dataset.followUrl || form.getAttribute('action');
    const unfollowUrl = form.dataset.unfollowUrl || form.getAttribute('action');
    const button = form.querySelector('.support-btn');
    const methodInput = form.querySelector('input[name="_method"]');

    if (isFollowing) {
      form.dataset.following = 'true';
      form.setAttribute('action', unfollowUrl);
      if (methodInput) {
        methodInput.value = 'delete';
      } else {
        const hidden = document.createElement('input');
        hidden.type = 'hidden';
        hidden.name = '_method';
        hidden.value = 'delete';
        form.appendChild(hidden);
      }
      if (button) {
        button.classList.add('active');
        button.textContent = 'âœ“ Supported';
      }
    } else {
      form.dataset.following = 'false';
      form.setAttribute('action', followUrl);
      if (methodInput) methodInput.remove();
      if (button) {
        button.classList.remove('active');
        button.textContent = '+ Support';
      }
    }
  }

  // Initialize on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', function() {
    console.log('[Users Index Search] DOMContentLoaded fired');
    initializeUsersSearch();
    initializeFollowToggles();
  });

  // Also initialize on Turbo navigation
  document.addEventListener('turbo:load', function() {
    console.log('[Users Index Search] turbo:load fired');
    initializeUsersSearch();
    initializeFollowToggles();
  });

  // Fallback initialization
  setTimeout(function() {
    console.log('[Users Index Search] Fallback initialization');
    initializeUsersSearch();
    initializeFollowToggles();
  }, 500);
</script>
