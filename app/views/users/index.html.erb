<% theme = user_theme_styles %>
<style>
  .profiles-hero {
    padding: 32px 0 12px;
    display: grid;
    gap: 8px;
  }
  .profiles-hero h1 {
    margin: 0;
    font-size: clamp(26px, 5vw, 36px);
    letter-spacing: 0.01em;
  }
  .profiles-hero p {
    margin: 0;
    color: var(--muted);
  }
  .profiles-layout {
    display: grid;
    grid-template-columns: 240px minmax(0, 1fr);
    gap: 24px;
    align-items: start;
    padding-right: 24px;
    margin-top: 12px;
  }
  .profiles-filters {
    position: sticky;
    top: 96px;
    align-self: start;
  }
  .profiles-main {
    min-width: 0;
    padding-right: 0;
  }
  .profiles-filters-inner {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 16px;
    background: rgba(255,255,255,0.03);
    display: grid;
    gap: 16px;
  }
  .profiles-filters-form {
    display: grid;
    gap: 14px;
  }
  .profiles-filters h3 {
    margin: 0;
    font-size: 13px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }
  .filter-group {
    display: grid;
    gap: 6px;
  }
  .filter-label {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--muted);
  }
  .filter-select {
    width: 100%;
    background: rgba(255,255,255,0.04);
    border: 1px solid var(--border);
    border-radius: 10px;
    color: var(--text);
    padding: 9px 12px;
    font-size: 13px;
    font-weight: 600;
    appearance: none;
  }
  .filter-actions {
    display: grid;
    gap: 8px;
    margin-top: 10px;
  }
  .filter-apply {
    width: 100%;
    padding: 10px 12px;
    border-radius: 10px;
    border: none;
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? '#0b0b0d' : 'white' %>;
    font-size: 13px;
    font-weight: 700;
    cursor: pointer;
  }
  .filter-reset {
    text-align: center;
    font-size: 12px;
    color: var(--muted);
    text-decoration: none;
  }
  .filter-note {
    font-size: 12px;
    color: var(--muted);
    line-height: 1.4;
  }
  .profiles-toolbar {
    display: grid;
    gap: 12px;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    margin: 0 0 20px;
  }
  .profiles-search {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
  }
  .profiles-search input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--text);
    font-size: 15px;
    outline: none;
  }
  .profiles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-bottom: 32px;
    padding-right: 24px;
  }

  @media (max-width: 900px) {
    .profiles-layout {
      grid-template-columns: 1fr;
      padding-right: 0;
    }
    .profiles-filters {
      position: static;
      order: -1;
    }
    .profiles-main {
      padding-right: 0;
    }
    .profiles-grid {
      grid-template-columns: 1fr;
      padding-right: 0;
    }
  }

  @media (max-width: 600px) {
    .profiles-grid {
      grid-template-columns: 1fr;
    }
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin: 32px 0;
  }

  .pagination a,
  .pagination .current,
  .pagination .gap {
    padding: 8px 12px;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,0.04);
    color: var(--text);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.15s ease;
  }

  .pagination a:hover {
    background: rgba(255,255,255,0.08);
    border-color: var(--accent);
  }

  .pagination .current {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: <%= theme[:theme_name] == 'light' ? 'white' : '#0b0b0d' %>;
    border-color: transparent;
    font-weight: 600;
  }

  .pagination .gap {
    border: none;
    background: transparent;
    color: var(--muted);
  }

  .pagination .first,
  .pagination .prev,
  .pagination .next,
  .pagination .last {
    font-weight: 600;
  }
  .profile-card {
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 16px;
    background: rgba(255,255,255,0.02);
    display: grid;
    gap: 10px;
    transition: all 0.15s ease;
    text-decoration: none;
    color: inherit;
  }
  .profile-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.15);
    box-shadow: 0 10px 30px rgba(0,0,0,0.35);
  }
  .profile-card-top {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }
  .profile-card-link {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    flex: 1;
    min-width: 0;
    text-decoration: none;
    color: inherit;
  }
  .profile-card-actions {
    flex-shrink: 0;
    margin-left: auto;
    margin-top: 2px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 6px;
  }

