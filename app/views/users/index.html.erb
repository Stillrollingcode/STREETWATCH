    height: 60px;
    min-width: 60px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: <%= theme[:primary_rgba].sub('ALPHA', '0.3') %>; /* Fallback for Chrome <111 */
    background: color-mix(in srgb, var(--accent) 30%, transparent);
    color: #050505;
    font-weight: 800;
    letter-spacing: 0.04em;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .profile-info {
    flex: 1;
    min-width: 0;
  }
  .profile-name {
