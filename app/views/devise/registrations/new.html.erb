<% content_for :head do %>
  <style>
    .auth-page {
      min-height: calc(100vh - 200px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 18px;
      color: var(--text);
    }
    .auth-card {
      width: 100%;
      max-width: 420px;
      background: rgba(255,255,255,0.04);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 32px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }
    .auth-title {
      margin: 0 0 24px;
      font-size: 28px;
      font-weight: 800;
      text-align: center;
      color: var(--text);
    }
    .social-buttons {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }
    .social-btn {
      flex: 1;
      padding: 12px 16px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: rgba(255,255,255,0.02);
      color: var(--text);
      font-weight: 600;
      text-align: center;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    .social-btn:hover {
      background: rgba(255,255,255,0.06);
      border-color: var(--accent);
    }
    .social-btn.google {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    .auth-divider {
      text-align: center;
      color: var(--muted);
      font-size: 14px;
      margin: 20px 0;
      position: relative;
    }
    .auth-divider::before,
    .auth-divider::after {
      content: '';
      position: absolute;
      top: 50%;
      width: calc(50% - 30px);
      height: 1px;
      background: var(--border);
    }
    .auth-divider::before {
      left: 0;
    }
    .auth-divider::after {
      right: 0;
    }
    .auth-form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }
    .auth-form .field {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }
    .auth-form label {
      color: var(--muted);
      font-size: 14px;
      font-weight: 600;
    }
    .auth-input {
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: rgba(255,255,255,0.02);
      color: var(--text);
      font-size: 15px;
      font-family: inherit;
      transition: all 0.2s ease;
    }
    .auth-input:focus {
      outline: none;
      border-color: var(--accent);
      background: rgba(255,255,255,0.04);
    }
    .auth-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .auth-link {
      color: var(--accent);
      text-decoration: none;
      font-size: 13px;
      font-weight: 600;
      transition: color 0.2s ease;
    }
    .auth-link:hover {
      color: #5ba876;
    }
    .auth-submit {
      width: 100%;
      padding: 14px;
      border-radius: 10px;
      border: none;
      background: linear-gradient(135deg, var(--accent), var(--accent-2));
      color: white;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s ease;
      margin-top: 6px;
    }
    .auth-submit:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 20px rgba(98, 211, 127, 0.3);
    }
    input[type="radio"] {
      width: auto;
      accent-color: var(--accent);
    }
  </style>

  <script>
    document.addEventListener("turbo:load", attachUsernameChecker);
    document.addEventListener("DOMContentLoaded", attachUsernameChecker);
    function attachUsernameChecker() {
      const input = document.getElementById("username-input");
      const status = document.getElementById("username-status");
      if (!input || !status) return;
      let timer;
      input.addEventListener("input", () => {
        const val = input.value.trim();
        status.textContent = val ? "Checking..." : "";
        clearTimeout(timer);
        if (!val) return;
        timer = setTimeout(() => {
          fetch(`/username/check?username=${encodeURIComponent(val)}`, { headers: { Accept: "application/json" }})
            .then((res) => res.json())
            .then((data) => {
              if (data.available) {
                status.textContent = "Available";
                status.style.color = "#6dd27f";
              } else {
                status.textContent = "Taken";
                status.style.color = "#ff7b7b";
              }
            })
            .catch(() => {
              status.textContent = "Error checking";
              status.style.color = "#ff7b7b";
            });
        }, 300);
      });
    }
  </script>
<% end %>

<div class="auth-page">
  <div class="auth-card">
    <h2 class="auth-title">Create account</h2>

    <div class="social-buttons">
      <% if Devise.omniauth_configs[:google_oauth2] %>
        <%= link_to "Google",
                    user_google_oauth2_omniauth_authorize_path,
                    class: "social-btn google",
                    data: { turbo_method: :post } %>
      <% else %>
        <a class="social-btn google" href="#" aria-disabled="true">Google (connect env vars)</a>
      <% end %>
    </div>

    <div class="auth-divider">or</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "auth-input" %>
      </div>

      <div class="field">
        <div class="auth-actions">
          <%= f.label :username %>
          <span id="username-status" style="font-size: 12px; color: #9a9aa3;"></span>
        </div>
        <%= f.text_field :username, autocomplete: "username", class: "auth-input", id: "username-input", required: true %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :profile_type, "Account Type" %>
        <div style="display: flex; gap: 16px; margin-top: 8px;">
          <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
            <%= f.radio_button :profile_type, 'individual', checked: true, style: "width: auto;" %>
            <span>Individual</span>
          </label>
          <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
            <%= f.radio_button :profile_type, 'company', style: "width: auto;" %>
            <span>Company</span>
          </label>
        </div>
      </div>

      <div class="field">
        <div class="auth-actions">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <span style="color: #8f8f98;">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
      </div>

      <%= f.submit "Sign up", class: "auth-submit" %>
    <% end %>

    <div style="margin-top: 12px; text-align: center; font-size: 13px; color: #b0b0b7;">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "auth-link" %>
    </div>
  </div>
</div>
