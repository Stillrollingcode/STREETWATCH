<% content_for :head do %>
<% theme = user_theme_styles %>
<style>
  .approvals-page {
    max-width: 1200px;
    margin: 20px auto 60px;
    padding: 0 18px;
    color: var(--text);
  }
  .approvals-header {
    margin-bottom: 32px;
  }
  .approvals-header h1 {
    font-size: 32px;
    font-weight: 800;
    margin: 0 0 8px;
  }
  .approvals-subtitle {
    color: var(--muted);
    font-size: 16px;
  }
  .approvals-tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    border-bottom: 2px solid var(--border);
  }
  .approval-tab {
    padding: 12px 20px;
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    color: var(--muted);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.15s ease;
    margin-bottom: -2px;
  }
  .approval-tab:hover {
    color: var(--text);
  }
  .approval-tab.active {
    color: var(--accent);
    border-bottom-color: var(--accent);
  }
  .approval-section {
    display: none;
  }
  .approval-section.active {
    display: block;
  }
  .approval-card {
    background: rgba(255,255,255,0.04);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 16px;
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }
  .approval-thumbnail {
    width: 160px;
    min-width: 160px;
    aspect-ratio: 16 / 9;
    border-radius: 8px;
    overflow: hidden;
    background: linear-gradient(135deg, <%= theme[:primary_rgba].sub('ALPHA', '0.2') %>, <%= theme[:secondary_rgba].sub('ALPHA', '0.2') %>); /* Fallback for Chrome <111 */
    background: linear-gradient(135deg, color-mix(in srgb, var(--accent) 20%, transparent), color-mix(in srgb, var(--accent-2) 20%, transparent));
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }
  .approval-thumbnail:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
  }
  .approval-thumbnail::after {
    content: 'â–¶';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0,0,0,0.7);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    padding-left: 3px;
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  .approval-thumbnail:hover::after {
    opacity: 1;
  }
  .approval-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .video-preview-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.95);
    z-index: 10000;
    align-items: center;
    justify-content: center;
    padding: 40px;
  }
  .video-preview-modal.active {
    display: flex;
  }
  .video-preview-content {
    max-width: 90vw;
    max-height: 90vh;
    width: 1200px;
    position: relative;
  }
  .video-preview-wrapper {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #000;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.5);
  }
  .video-preview-wrapper iframe,
  .video-preview-wrapper video {
    width: 100%;
    height: 100%;
  }
  .video-preview-close {
    position: absolute;
    top: -50px;
    right: 0;
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .video-preview-close:hover {
    background: rgba(255,255,255,0.2);
    transform: scale(1.1);
  }
  .video-preview-title {
    color: white;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 16px;
  }
  .approval-info {
    flex: 1;
  }
  .approval-film-title {
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 8px;
  }
  .approval-film-title a {
    color: var(--text);
    text-decoration: none;
  }
  .approval-film-title a:hover {
    color: var(--accent);
  }
  .approval-role {
    display: inline-block;
    padding: 4px 10px;
    background: rgba(255,255,255,0.1);
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    margin-bottom: 12px;
  }
  .approval-meta {
    color: var(--muted);
    font-size: 14px;
    margin-bottom: 8px;
  }
  .approval-uploader {
    color: var(--muted);
    font-size: 13px;
    margin-bottom: 16px;
  }
  .approval-uploader a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.15s ease;
  }
  .approval-uploader a:hover {
    color: var(--accent-2);
  }
  .approval-actions {
    display: flex;
    gap: 12px;
  }
  .approve-btn, .reject-btn {
    padding: 10px 20px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.15s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border: none;
  }
  .approve-btn {
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    color: #0b0b0d;
  }
  .approve-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.3);
  }
  .reject-btn {
    background: rgba(255,255,255,0.04);
    border: 1px solid var(--border);
    color: var(--text);
  }
  .reject-btn:hover {
    background: rgba(255,100,100,0.2);
    border-color: rgba(255,100,100,0.5);
    color: rgba(255,100,100,1);
  }
  .rejection-reason {
    background: rgba(255,100,100,0.1);
    border: 1px solid rgba(255,100,100,0.3);
    border-radius: 8px;
    padding: 12px;
    margin-top: 12px;
    color: var(--text);
    font-size: 13px;
  }
  .rejection-reason strong {
    color: rgba(255,100,100,1);
  }
  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--muted);
  }
  .empty-state-icon {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.3;
  }
</style>
<% end %>

<div class="approvals-page">
  <div class="approvals-header">
    <h1>Content Approvals</h1>
    <p class="approvals-subtitle">Manage films where you've been tagged as filmer, editor, rider, or company</p>
  </div>

  <div class="approvals-tabs">
    <button class="approval-tab active" data-tab="pending">Pending (<%= @pending_approvals.count %>)</button>
    <button class="approval-tab" data-tab="approved">Approved (<%= @approved_approvals.count %>)</button>
    <button class="approval-tab" data-tab="rejected">Rejected (<%= @rejected_approvals.count %>)</button>
  </div>

  <!-- Pending Approvals -->
  <div class="approval-section active" data-section="pending">
    <% if @pending_approvals.any? %>
      <% @pending_approvals.each do |approval| %>
        <div class="approval-card">
          <div class="approval-thumbnail"
               onclick="openVideoPreview('<%= approval.film.youtube_video_id if approval.film.youtube_url.present? %>', '<%= approval.film.video.attached? ? url_for(approval.film.video) : '' %>', '<%= escape_javascript(approval.film.title) %>')">
            <% if approval.film.display_thumbnail %>
              <%= image_tag approval.film.display_thumbnail, alt: approval.film.title %>
            <% end %>
          </div>
          <div class="approval-info">
            <div class="approval-film-title">
              <%= link_to approval.film.title, film_path(approval.film) %>
            </div>
            <div class="approval-role">Tagged as <%= approval.approval_type.titleize %></div>
            <div class="approval-meta">
              Submitted <%= time_ago_in_words(approval.created_at) %> ago
            </div>
            <div class="approval-uploader">
              Uploaded by <%= link_to approval.film.user.username, user_path(approval.film.user) %>
            </div>
            <div class="approval-actions">
              <%= button_to approve_film_approval_path(approval), method: :post, class: "approve-btn" do %>
                <span>âœ“</span>
                <span>Approve</span>
              <% end %>
              <%= button_to reject_film_approval_path(approval), method: :post, class: "reject-btn", form: { onsubmit: "return confirm('Are you sure you want to reject this tag?');" } do %>
                <span>âœ—</span>
                <span>Reject</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">âœ“</div>
        <p>No pending approvals</p>
      </div>
    <% end %>
  </div>

  <!-- Approved -->
  <div class="approval-section" data-section="approved">
    <% if @approved_approvals.any? %>
      <% @approved_approvals.each do |approval| %>
        <div class="approval-card">
          <div class="approval-thumbnail"
               onclick="openVideoPreview('<%= approval.film.youtube_video_id if approval.film.youtube_url.present? %>', '<%= approval.film.video.attached? ? url_for(approval.film.video) : '' %>', '<%= escape_javascript(approval.film.title) %>')">
            <% if approval.film.display_thumbnail %>
              <%= image_tag approval.film.display_thumbnail, alt: approval.film.title %>
            <% end %>
          </div>
          <div class="approval-info">
            <div class="approval-film-title">
              <%= link_to approval.film.title, film_path(approval.film) %>
            </div>
            <div class="approval-role">Tagged as <%= approval.approval_type.titleize %></div>
            <div class="approval-meta">
              Approved <%= time_ago_in_words(approval.updated_at) %> ago
            </div>
            <div class="approval-uploader">
              Uploaded by <%= link_to approval.film.user.username, user_path(approval.film.user) %>
            </div>
            <div class="approval-actions">
              <%= button_to reset_film_approval_path(approval), method: :patch, class: "reject-btn", form: { onsubmit: "return confirm('Send this tag back to pending so you can change your decision?');" } do %>
                <span>â†º</span>
                <span>Reopen Decision</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">ðŸ“‹</div>
        <p>No approved content yet</p>
      </div>
    <% end %>
  </div>

  <!-- Rejected -->
  <div class="approval-section" data-section="rejected">
    <% if @rejected_approvals.any? %>
      <% @rejected_approvals.each do |approval| %>
        <div class="approval-card">
          <div class="approval-thumbnail"
               onclick="openVideoPreview('<%= approval.film.youtube_video_id if approval.film.youtube_url.present? %>', '<%= approval.film.video.attached? ? url_for(approval.film.video) : '' %>', '<%= escape_javascript(approval.film.title) %>')">
            <% if approval.film.display_thumbnail %>
              <%= image_tag approval.film.display_thumbnail, alt: approval.film.title %>
            <% end %>
          </div>
          <div class="approval-info">
            <div class="approval-film-title">
              <%= link_to approval.film.title, film_path(approval.film) %>
            </div>
            <div class="approval-role">Tagged as <%= approval.approval_type.titleize %></div>
            <div class="approval-meta">
              Rejected <%= time_ago_in_words(approval.updated_at) %> ago
            </div>
            <div class="approval-uploader">
              Uploaded by <%= link_to approval.film.user.username, user_path(approval.film.user) %>
            </div>
            <% if approval.rejection_reason.present? %>
              <div class="rejection-reason">
                <strong>Reason:</strong> <%= approval.rejection_reason %>
              </div>
            <% end %>
            <div class="approval-actions">
              <%= button_to reset_film_approval_path(approval), method: :patch, class: "approve-btn", form: { onsubmit: "return confirm('Send this tag back to pending so you can change your decision?');" } do %>
                <span>â†º</span>
                <span>Reopen Decision</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-state-icon">âœ—</div>
        <p>No rejected content</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Video Preview Modal -->
<div class="video-preview-modal" id="videoPreviewModal">
  <div class="video-preview-content">
    <div class="video-preview-close" onclick="closeVideoPreview()">Ã—</div>
    <div class="video-preview-title" id="videoPreviewTitle"></div>
    <div class="video-preview-wrapper" id="videoPreviewWrapper"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', initApprovalTabs);
  document.addEventListener('turbo:load', initApprovalTabs);

  function initApprovalTabs() {
    const tabs = document.querySelectorAll('.approval-tab');
    const sections = document.querySelectorAll('.approval-section');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetTab = tab.dataset.tab;

        // Update active tab
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Update active section
        sections.forEach(section => {
          if (section.dataset.section === targetTab) {
            section.classList.add('active');
          } else {
            section.classList.remove('active');
          }
        });
      });
    });
  }

  function openVideoPreview(youtubeId, videoUrl, title) {
    const modal = document.getElementById('videoPreviewModal');
    const wrapper = document.getElementById('videoPreviewWrapper');
    const titleElement = document.getElementById('videoPreviewTitle');

    titleElement.textContent = title;
    wrapper.innerHTML = '';

    if (youtubeId) {
      // YouTube video
      const iframe = document.createElement('iframe');
      iframe.src = `https://www.youtube-nocookie.com/embed/${youtubeId}?autoplay=1`;
      iframe.frameBorder = '0';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
      iframe.allowFullscreen = true;
      wrapper.appendChild(iframe);
    } else if (videoUrl) {
      // Direct video file
      const video = document.createElement('video');
      video.src = videoUrl;
      video.controls = true;
      video.autoplay = true;
      wrapper.appendChild(video);
    }

    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeVideoPreview() {
    const modal = document.getElementById('videoPreviewModal');
    const wrapper = document.getElementById('videoPreviewWrapper');

    // Stop video playback
    wrapper.innerHTML = '';

    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Close on background click
  document.addEventListener('click', function(e) {
    const modal = document.getElementById('videoPreviewModal');
    if (e.target === modal) {
      closeVideoPreview();
    }
  });

  // Close on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeVideoPreview();
    }
  });
</script>
