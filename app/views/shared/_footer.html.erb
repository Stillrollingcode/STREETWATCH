<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Row -->
    <div class="footer-main">
      <!-- Logo -->
      <%= link_to root_path, class: 'footer-logo' do %>
        <%= image_tag '/SW-LOGO-2025-full-WHT.svg', alt: 'STREETWATCH', class: 'footer-logo-dark' %>
        <%= image_tag '/SW-LOGO-2025-full-BLK.svg', alt: 'STREETWATCH', class: 'footer-logo-light' %>
      <% end %>

      <!-- Navigation Links -->
      <nav class="footer-nav">
        <%= link_to 'About', about_path, class: 'footer-link' %>
        <%= link_to 'Subscription Details', subscription_path, class: 'footer-link' %>
        <%= link_to 'Privacy Policy', privacy_path, class: 'footer-link' %>
        <%= link_to 'Sellers Disclaimer', sellers_disclaimer_path, class: 'footer-link' %>
      </nav>
    </div>

    <!-- DMCA Notice -->
    <div class="footer-dmca">
      <p>STREETWATCH will comply with any DMCA copyright claims.</p>
    </div>

    <!-- Copyright -->
    <div class="footer-copyright">
      <p>&copy; <%= Time.current.year %> STREETWATCH. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: rgba(255, 255, 255, 0.02);
    border-top: 1px solid var(--border);
    margin-top: 60px;
    padding: 40px 18px 20px;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .footer-main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .footer-logo {
    position: relative;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s;
  }

  .footer-logo:hover {
    opacity: 0.8;
  }

  .footer-logo img {
    height: 100%;
    width: auto;
    max-width: 300px;
  }

  /* Show white logo in dark mode (default) */
  .footer-logo-dark {
    display: block;
  }

  .footer-logo-light {
    display: none;
  }

  /* Show black logo in light mode */
  @media (prefers-color-scheme: light) {
    .footer-logo-dark {
      display: none;
    }

    .footer-logo-light {
      display: block;
    }
  }

  /* Also handle manual theme switching if you have it */
  [data-theme="light"] .footer-logo-dark {
    display: none;
  }

  [data-theme="light"] .footer-logo-light {
    display: block;
  }

  [data-theme="dark"] .footer-logo-dark {
    display: block;
  }

  [data-theme="dark"] .footer-logo-light {
    display: none;
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .footer-link {
    color: var(--text);
    text-decoration: none;
    font-size: 14px;
    opacity: 0.8;
    transition: opacity 0.2s;
  }

  .footer-link:hover {
    opacity: 1;
    text-decoration: underline;
  }

  .footer-dmca {
    text-align: center;
    padding: 16px 0;
    border-top: 1px solid var(--border);
    width: 100%;
  }

  .footer-dmca p {
    font-size: 13px;
    opacity: 0.7;
    margin: 0;
  }

  .footer-copyright {
    text-align: center;
  }

  .footer-copyright p {
    font-size: 12px;
    opacity: 0.6;
    margin: 0;
  }

  /* Desktop layout - horizontal */
  @media (min-width: 769px) {
    .footer-main {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .footer-logo {
      justify-content: flex-start;
    }

    .footer-nav {
      justify-content: flex-end;
    }
  }

  /* Mobile layout - vertical */
  @media (max-width: 768px) {
    .site-footer {
      padding: 30px 18px 20px;
      margin-top: 40px;
    }

    .footer-nav {
      flex-direction: column;
      gap: 12px;
    }

    .footer-logo {
      height: 50px;
    }
  }
</style>
