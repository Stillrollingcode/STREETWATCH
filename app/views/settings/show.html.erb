<% content_for :head do %>
  <style>
    .settings-shell {
      max-width: 700px;
      margin: 28px auto 60px;
      padding: 0 18px 40px;
      color: var(--text);
    }
    .settings-card {
      background: rgba(255,255,255,0.04);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    }
    .settings-card h1 {
      margin: 0 0 24px;
      font-size: 28px;
    }
    .settings-section {
      margin-bottom: 32px;
    }
    .settings-section:last-child {
      margin-bottom: 0;
    }
    .section-title {
      font-size: 16px;
      font-weight: 700;
      color: var(--text);
      margin: 0 0 16px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .theme-options {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }
    .theme-option {
      position: relative;
      cursor: pointer;
    }
    .theme-option input[type="radio"] {
      position: absolute;
      opacity: 0;
    }
    .theme-option label {
      display: block;
      padding: 16px;
      background: rgba(255,255,255,0.04);
      border: 2px solid var(--border);
      border-radius: 12px;
      text-align: center;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    .theme-option input[type="radio"]:checked + label {
      background: color-mix(in srgb, var(--accent) 20%, transparent);
      border-color: color-mix(in srgb, var(--accent) 60%, transparent);
      color: var(--accent);
    }
    .theme-option label:hover {
      border-color: rgba(255,255,255,0.3);
    }
    .slider-group {
      margin-bottom: 16px;
    }
    .slider-label {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      font-weight: 600;
      color: var(--text);
    }
    .slider-value {
      font-size: 14px;
      padding: 4px 10px;
      background: rgba(255,255,255,0.06);
      border-radius: 6px;
      font-family: monospace;
    }
    .color-preview {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      border: 2px solid rgba(255,255,255,0.2);
      display: inline-block;
      vertical-align: middle;
      margin-left: 8px;
    }
    input[type="range"] {
      width: 100%;
      height: 8px;
      border-radius: 4px;
      background: linear-gradient(to right,
        hsl(0, 45%, 45%),
        hsl(60, 45%, 45%),
        hsl(120, 45%, 45%),
        hsl(180, 45%, 45%),
        hsl(240, 45%, 45%),
        hsl(300, 45%, 45%),
        hsl(360, 45%, 45%)
      );
      outline: none;
      -webkit-appearance: none;
      cursor: pointer;
    }
    input[type="range"]::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: var(--text);
      border: 3px solid var(--bg);
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    }
    input[type="range"]::-moz-range-thumb {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: var(--text);
      border: 3px solid var(--bg);
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    }
    .color-examples {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 12px;
      margin-top: 16px;
      padding: 16px;
      background: rgba(255,255,255,0.02);
      border-radius: 12px;
      border: 1px solid var(--border);
    }
    .color-example {
      text-align: center;
      font-size: 12px;
      color: var(--muted);
    }
    .color-swatch {
      width: 100%;
      height: 60px;
      border-radius: 8px;
      margin-bottom: 8px;
      border: 1px solid rgba(255,255,255,0.1);
    }
    .save-btn {
      width: 100%;
      padding: 14px;
      background: linear-gradient(120deg, var(--accent), var(--accent-2));
      color: #0b0b0d;
      border: none;
      border-radius: 999px;
      font-weight: 700;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    .save-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }
  </style>
<% end %>

<div class="settings-shell">
  <div class="settings-card">
    <h1>Settings</h1>

    <%= form_with(model: @preference, url: settings_path, method: :patch) do |f| %>
      <!-- Theme Selection -->
      <div class="settings-section">
        <div class="section-title">Theme</div>
        <div class="theme-options">
          <div class="theme-option">
            <%= f.radio_button :theme, "dark", id: "theme_dark" %>
            <%= f.label :theme, "Dark Mode", value: "dark", for: "theme_dark" %>
          </div>
          <div class="theme-option">
            <%= f.radio_button :theme, "light", id: "theme_light" %>
            <%= f.label :theme, "Light Mode", value: "light", for: "theme_light" %>
          </div>
        </div>
      </div>

      <!-- Accent Color -->
      <div class="settings-section">
        <div class="section-title">Accent Color</div>
        <div class="slider-group">
          <div class="slider-label">
            <span>Hue</span>
            <span class="slider-value">
              <span id="hue-value"><%= @preference.accent_hue %></span>Â°
              <span class="color-preview" id="color-preview" style="background-color: hsl(<%= @preference.accent_hue %>, 45%, 45%);"></span>
            </span>
          </div>
          <%= f.range_field :accent_hue, min: 0, max: 360, step: 1, id: "accent-hue-slider" %>
        </div>

        <!-- Color Examples -->
        <div class="color-examples">
          <div class="color-example">
            <div class="color-swatch" id="example-primary" style="background: hsl(<%= @preference.accent_hue %>, 45%, 45%);"></div>
            <div>Primary</div>
          </div>
          <div class="color-example">
            <div class="color-swatch" id="example-light" style="background: hsl(<%= @preference.accent_hue %>, 45%, 55%);"></div>
            <div>Light</div>
          </div>
          <div class="color-example">
            <div class="color-swatch" id="example-gradient" style="background: linear-gradient(135deg, hsl(<%= @preference.accent_hue %>, 45%, 45%), hsl(<%= @preference.accent_hue %>, 45%, 35%));"></div>
            <div>Gradient</div>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <button type="submit" class="save-btn">Save Settings</button>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.getElementById('accent-hue-slider');
    const hueValue = document.getElementById('hue-value');
    const colorPreview = document.getElementById('color-preview');
    const examplePrimary = document.getElementById('example-primary');
    const exampleLight = document.getElementById('example-light');
    const exampleGradient = document.getElementById('example-gradient');

    if (slider) {
      slider.addEventListener('input', (e) => {
        const hue = e.target.value;
        hueValue.textContent = hue;

        const primaryColor = `hsl(${hue}, 45%, 45%)`;
        const lightColor = `hsl(${hue}, 45%, 55%)`;
        const gradientColor = `linear-gradient(135deg, hsl(${hue}, 45%, 45%), hsl(${hue}, 45%, 35%))`;

        colorPreview.style.backgroundColor = primaryColor;
        examplePrimary.style.background = primaryColor;
        exampleLight.style.background = lightColor;
        exampleGradient.style.background = gradientColor;
      });
    }
  });

  document.addEventListener('turbo:load', () => {
    const slider = document.getElementById('accent-hue-slider');
    if (slider) {
      // Trigger initial update
      slider.dispatchEvent(new Event('input'));
    }
  });
</script>
